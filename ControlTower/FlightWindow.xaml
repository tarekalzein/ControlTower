<Window x:Class="ControlTower.FlightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTower"
        mc:Ignorable="d"
        Title="Flight Window" Height="462" Width="514">
    <Grid>
        <Image x:Name="flightImage" Stretch="UniformToFill"  HorizontalAlignment="Left" Height="285" Margin="10,55,0,0" VerticalAlignment="Top" Width="486"/>
        <Button Name="startBtn" Content="Start" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Margin="30,361,0,0" VerticalAlignment="Top" Width="85" Height="45" Click="startBtn_Click"/>
        <ComboBox Name="statusCmb" HorizontalAlignment="Left" Margin="145,361,0,0" VerticalAlignment="Top" Width="220" Height="45"/>
        <Button Name="landBtn" Content="Land" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Margin="391,361,0,0" VerticalAlignment="Top" Width="84" Height="45"/>
        <Label Content="Flight Nr." FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" Height="40"/>
        <Label Name="flightNumberLbl" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="80" Height="40"/>
    </Grid>
</Window>
